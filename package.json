{
  "name": "@mydobie/feature-flags",
  "description": "",
  "version": "2.0.0",
  "main": "index.js",
  "types": "index.d.ts",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": "https://github.com/mydobie/featureFlags",
  "files": [
    "lib/**/*"
  ],
  "engines": {
    "node": "14"
  },
  "dependencies": {
    "react": "17.0.0 - 17.999.999",
    "react-dom": "17.0.0 - 17.999.999"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@testing-library/react-hooks": "^7.0.1",
    "@babel/preset-react": "^7.12.10",
    "@types/jest-axe": "^3.5.1",
    "@reduxjs/toolkit": "^1.6.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-redux": "^7.2.4",
    "redux": "^4.1.0",
    "redux-persist": "^6.0.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "bootstrap": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-watch": "^7.0.0",
    "husky": "^7.0.0",
    "jest-axe": "^5.0.1",
    "lint-staged": "^11.0.0",
    "onchange": "^7.1.0",
    "prettier": "2.3.2",
    "react-scripts": "^4.0.3",
    "redux-mock-store": "^1.5.4",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "typescript": "^4.3.5",
    "uglify-js": "^3.12.3"
  },
  "scripts": {
    "d": "npm i && npm rebuild node-sass",
    "installDependencies": "npm run d",
    "start": "REACT_APP_GIT_SHA=`git rev-parse --short HEAD` react-scripts start",
    "start:mock:REMOVE": "REACT_APP_USE_MOCKS=true npm run start",
    "----------------------------------------------------------1": "",
    "buildts": "tsc --project tsconfig-build-files.json",
    "build": "npm run d && npm run test && npm run npmAudit && npm run build:ci",
    "build:ci": "REACT_APP_GIT_SHA=`git rev-parse --short HEAD` react-scripts build",
    "test": "react-scripts test --coverage  --passWithNoTests --testPathIgnorePatterns /helpers --watchAll=false ",
    "test:watch": "react-scripts test ",
    "test:update": "npm run test -- -u",
    "----------------------------------------------------------2": "",
    "lint": "npm run lint:js && npm run prettier:all ",
    "lint:fix": "npm run prettier:fix:all && npm run lint:js:fix ",
    "lint:watch": "onchange 'src/**/*.*' -- npm run lint:fix",
    "----------------------------------------------------------3": "",
    "lint:js": "esw --ext .jsx,.js,.tsx,.ts --color ",
    "lint:js:fix": "npm run lint:js -- --fix",
    "prettier": "prettier  --ignore-path ./.eslintignore --check",
    "prettier:all": "npm run prettier '**/*.+(js|jsx|html|css|scss|json)'",
    "prettier:fix": "prettier  --ignore-path ./.eslintignore --write",
    "prettier:fix:all": "npm run prettier:fix '**/*.+(js|jsx|tsx|html|css|scss|json)'",
    "lint:scss:REMOVE": "stylelint --ignore-path ./.eslintignore ",
    "lint:scss:all:REMOVE": "npm run lint:scss './**/*.+(css|scss)'",
    "lint:scss:fix:all:REMOVE": "npm run lint:scss -- --fix './**/*.+(css|scss)'",
    "----------------------------------------------------------4": "",
    "clean": "rm -rf node_modules && rm -f package-lock.json && npm run d",
    "uglify": "uglifyjs ",
    "checkCoverage": "node ./utils/testCoverage.js",
    "npmAudit": "npm audit -audit-level high",
    "createTar:REMOVVE": "node ./utils/createArchive.js",
    "buildPackage:KEEP": "npm run d && npm run npmAudit && npm run test && bash  utils/buildPackage.sh",
    "buildPackage": "bash  utils/buildPackage.sh",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    },
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "react-app",
      "react-app/jest",
      "prettier"
    ],
    "globals": {
      "styles": true
    },
    "env": {
      "browser": true,
      "commonjs": true,
      "jest": true,
      "es6": true,
      "jquery": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "prettier",
      "eslint-plugin-react"
    ],
    "rules": {
      "react/require-default-props": [
        2,
        {
          "ignoreFunctionalComponents": true
        }
      ],
      "react/static-property-placement": "off",
      "prettier/prettier": "error",
      "no-var": "error",
      "curly": "error",
      "one-var": "error",
      "no-console": "error",
      "no-unused-vars": "error",
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "react/jsx-filename-extension": [
        2,
        {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      ],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 80
  },
  "stylelint": {
    "extends": "stylelint-config-prettier"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*.{js,jsx,ts,tsx}"
    ],
    "coverageReporters": [
      "html",
      "json-summary",
      "text-summary"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
