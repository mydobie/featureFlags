{
  "name": "simple-react-app",
  "description": "",
  "version": "0.6.0",
  "private": true,
  "engines": {
    "node": "14"
  },
  "dependencies": {
    "react": "17.0.0 - 17.999.999",
    "react-dom": "17.0.0 - 17.999.999"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^1.6.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-redux": "^7.2.4",
    "redux": "^4.1.0",
    "redux-devtools-extension": "^2.13.9",
    "redux-persist": "^6.0.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "bootstrap": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.0",
    "axios-mock-adapter": "^1.19.0",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.1",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-watch": "^7.0.0",
    "husky": "^7.0.1",
    "jest-axe": "^5.0.1",
    "lint-staged": "^11.0.0",
    "node-sass": "^6.0.1",
    "onchange": "^7.1.0",
    "prettier": "2.3.2",
    "react-scripts": "^4.0.3",
    "redux-mock-store": "^1.5.4",
    "sass": "^1.35.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "typescript": "^4.3.5"
  },
  "resolutions": {
    "css-what": "5.0.1",
    "glob-parent": "5.1.2"
  },
  "scripts": {
    "d": "npm i && npm rebuild node-sass",
    "installDependencies": "npm run d",
    "start": "REACT_APP_GIT_SHA=`git rev-parse --short HEAD` react-scripts start",
    "start:mock": "REACT_APP_USE_MOCKS=true npm run start",
    "----------------------------------------------------------1": "",
    "build": "npm run d && npm run test && npm run npmAudit && REACT_APP_GIT_SHA=`git rev-parse --short HEAD` react-scripts build",
    "test": "react-scripts test --coverage --watchAll=false",
    "test:watch": "react-scripts test ",
    "test:update": "npm run test -- -u",
    "----------------------------------------------------------2": "",
    "lint": "npm run lint:js && npm run prettier:all && npm run lint:scss:all",
    "lint:fix": "npm run prettier:fix:all && npm run lint:js:fix ",
    "lint:watch": "onchange 'src/**/*.*' -- npm run lint:fix",
    "----------------------------------------------------------3": "",
    "lint:js": "esw --ext .jsx,.js,.tsx,.ts --color ",
    "lint:js:fix": "npm run lint:js -- --fix",
    "prettier": "prettier  --ignore-path ./.eslintignore --check",
    "prettier:all": "npm run prettier '**/*.+(js|jsx|html|css|scss|json)'",
    "prettier:fix": "prettier  --ignore-path ./.eslintignore --write",
    "prettier:fix:all": "npm run prettier:fix '**/*.+(js|jsx|tsx|html|css|scss|json)'",
    "lint:scss": "stylelint --ignore-path ./.eslintignore ",
    "lint:scss:all": "npm run lint:scss './**/*.+(css|scss)'",
    "lint:scss:fix:all": "npm run lint:scss -- --fix './**/*.+(css|scss)'",
    "----------------------------------------------------------4": "",
    "clean": "rm -rf node_modules && rm -f package-lock.json && npm run d",
    "checkCoverage": "node ./utils/testCoverage.js",
    "createTar": "node ./utils/createArchive.js",
    "preinstall": "npx npm-force-resolutions",
    "npmAudit": "npm audit -audit-level high"
  },
  "eslintConfig": {
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    },
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "prettier",
      "react-app",
      "react-app/jest"
    ],
    "globals": {
      "styles": true
    },
    "env": {
      "browser": true,
      "commonjs": true,
      "jest": true,
      "es6": true,
      "jquery": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "prettier",
      "eslint-plugin-react"
    ],
    "rules": {
      "react/require-default-props": [
        2,
        {
          "ignoreFunctionalComponents": true
        }
      ],
      "react/static-property-placement": "off",
      "prettier/prettier": "error",
      "no-var": "error",
      "curly": "error",
      "one-var": "error",
      "no-console": "error",
      "no-unused-vars": "error",
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "react/jsx-filename-extension": [
        2,
        {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      ],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 80
  },
  "stylelint": {
    "extends": "stylelint-config-prettier"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run npmAudit"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/index.jsx",
      "!<rootDir>/src/serviceWorker.js",
      "!<rootDir>/src/setupTests.js"
    ],
    "coverageReporters": [
      "html",
      "json-summary",
      "text-summary"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
